package projet;

import java.awt.*;

public class Carre  {                  // on va decouper le plateau de jeu en carre
    private int x;
    private int y;
    private int cote;
    public Carre(int x, int y, int cote){
        this.x = x;
        this.y = y;
        this.cote = cote;
    }

    public int getX(){
        return x;
    }
    public int getY(){
        return y;
    }
    public int getCote(){
        return cote;
    }
    public void setX(int x){
        this.x = x;
    }
    public void setY(int y){
        this.y = y;
    }


}
