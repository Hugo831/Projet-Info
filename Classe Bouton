package projet;
import javax.swing.*;
import java.awt.*;

public class Bouton extends JButton {
    private Panneau panneau;
    private String string;
    private Fenetre fenetre;
    public Bouton(String string, int width, int height, int x, int y, Panneau panneau, Fenetre fenetre){
        super(string);
        this.string = string;
        setBounds(x,y,width, height);
        this.panneau = panneau;
        this.fenetre = fenetre;
    }
    public void draw(Graphics graphics){
        graphics.setColor(Color.GRAY);
        graphics.fillRect(getX(),getY(),getWidth(),getHeight());
        graphics.setColor(Color.BLACK);
        graphics.setFont(new Font("Courier New", Font.BOLD, 20));
        graphics.drawString(string,getX()+30, getY()+30);             //pour faire apparaitre le texte plus ou moins au milieu
        if (contient(panneau.getSouris().x, panneau.getSouris().y)){
            graphics.setColor(Color.LIGHT_GRAY);
            graphics.fillRect(getX(),getY(),getWidth(),getHeight());
            graphics.setColor(Color.BLACK);
            graphics.setFont(new Font("Courier New", Font.BOLD, 20));
            graphics.drawString(string,getX()+30, getY()+30);
        }
    }
    public boolean contient(int x, int y){
        return x >= getX() && x < getX() + getWidth() && y >= getY() && y < getY() + getHeight();
    }
}
