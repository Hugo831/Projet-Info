package projet;
import javax.swing.*;
import java.awt.*;


public class PNJ extends Carre implements Drawable {

    private int Pts_Vie;
    private int Wave;
    private int Points;                      // points perdus si le PNJ arrive a la sortie
    private Plateau_Jeu plateau;
    private boolean inGame = false;

    public PNJ(int x, int y, int cote, int pts_Vie, int wave, int points, Plateau_Jeu plateau){
        super(x,y,cote);
        this.Pts_Vie = pts_Vie;
        this.Wave = wave;
        this.Points = points;
        this.plateau = plateau;



    }

    public void Initial_Life(int Pts_Vie, int Wave){
        this.Pts_Vie = Pts_Vie * Wave;                            //les points de vie dependent de la vague
    }

    public void draw(Graphics graphics) {
        if (inGame){
            graphics.setColor(Color.BLUE);
            graphics.fillRect(getX(), getY(), getCote(), getCote());
        }

    }
    public void depart_pnj(){
        if (!inGame){
            int [] pos= plateau.getFirstPos();
            setX(pos[0]);
            setY(pos[1]);

        }
        inGame = true;


    }
    public boolean getInGame(){
        return inGame;
    }
    private int i = 0;
    public void se_deplacer(){
        i += 1;
        setX(i);
        }


}
