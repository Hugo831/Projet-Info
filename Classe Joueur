package projet;

import java.awt.*;

public class Joueur{
    public static int Money;
    public static int Score;

    public Joueur(int money, int score){
        this.Money = money;
        this.Score = score;
    }

    public void draw(Graphics graphics){
        update_joueur();
        graphics.setColor(Color.LIGHT_GRAY);
        graphics.fillRect(50, 475, 150,80);
        graphics.setColor(Color.BLACK);
        graphics.setFont(new Font("Courier New", Font.BOLD, 14));
        graphics.drawString("Score Joueur: "+Score, 60, 500);
        graphics.drawString("Argent Joueur: "+ Money, 60, 540);

    }
    public int getMoney(){
        return Money;
    }
    public int getScore(){
        return Score;
    }
    public void setMoney(int newMoney){
        this.Money = newMoney;
    }
    public void setScore(int newScore){
        this.Score = newScore;
    }

    public void update_joueur(){

        getScore();
        getMoney();
    }




}
